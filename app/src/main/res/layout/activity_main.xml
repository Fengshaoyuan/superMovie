<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="end"
    android:id="@+id/drawer"
    tools:context="dev.baofeng.com.supermovie.MainActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:gravity="bottom"

        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/content"
            android:layout_height="match_parent">
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#fff"
            android:paddingTop="4dp"
            android:layout_gravity="bottom"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/main"
                android:drawableTop="@drawable/home_bt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:drawablePadding="0dp"
                android:textSize="@dimen/sp_12"
                android:gravity="center"
                android:textColor="@color/titlecor"
                android:text="离线影院"
                android:layout_height="50dp"
                />
            <TextView
                android:id="@+id/online"
                android:drawableTop="@drawable/bt_bt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/titlecor"
                android:text="在线影院"
                android:drawablePadding="0dp"
                android:textSize="@dimen/sp_12"
                android:gravity="center"
                android:layout_height="50dp"
                />
            <TextView
                android:id="@+id/bt_subject"
                android:drawableTop="@drawable/bt_bt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="专题排行"
                android:textSize="@dimen/sp_12"
                android:drawablePadding="0dp"
                android:textColor="@color/titlecor"
                android:gravity="center"
                android:layout_height="50dp"
                />
            <TextView
                android:id="@+id/my"
                android:drawableTop="@drawable/user_bt"
                android:text="个人中心"
                android:textSize="@dimen/sp_12"
                android:layout_width="0dp"
                android:drawablePadding="0dp"
                android:gravity="center"
                android:textColor="@color/titlecor"
                android:layout_weight="1"
                android:layout_height="50dp"
                />
        </LinearLayout>
    </FrameLayout>
</android.support.v4.widget.DrawerLayout>
