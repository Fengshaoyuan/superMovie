<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#69e1c1"
    app:cardPreventCornerOverlap="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardElevation="1dp"
    app:cardCornerRadius="2dp"
    app:cardUseCompatPadding="true"
    android:layout_height="wrap_content">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="100dp">
       <TextView
           android:layout_width="200dp"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="14dp"
           android:layout_height="wrap_content"
           android:lines="2"
           android:textSize="14sp"
           android:textColor="#393939"
           android:id="@+id/task_title"
           android:text="风雨咒，国产720p.mp4"
           />
       <com.huangyong.downloadlib.view.ProgressImageView
           android:layout_width="120dp"
           android:layout_height="80dp"
           android:id="@+id/posterImg"
           android:scaleType="centerCrop"
           android:layout_centerVertical="true"
           android:layout_marginRight="10dp"
           android:layout_alignParentRight="true"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="11sp"
           android:textColor="#393939"
           android:id="@+id/task_msg"
           android:text="875M   已下载412M"
           android:layout_alignParentBottom="true"
           android:lineSpacingExtra="4dp"
           android:layout_marginBottom="10dp"
           android:layout_toRightOf="@+id/task_msg_icon"
           android:layout_marginLeft="2dp"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="11sp"
           android:textColor="#393939"
           android:id="@+id/task_size_msg"
           android:text="正在下载2.3M/s"
           android:layout_alignParentBottom="true"
           android:lineSpacingExtra="4dp"
           android:layout_marginBottom="24dp"
           android:layout_marginLeft="10dp"
           />
       <ImageView
           android:layout_width="10dp"
           android:layout_height="10dp"
           android:textSize="11sp"
           android:textColor="#393939"
           android:src="@drawable/ic_detail_download_finish"
           android:id="@+id/task_msg_icon"
           android:layout_alignParentBottom="true"
           android:layout_marginBottom="12dp"
           android:layout_marginLeft="10dp"
           />
        <TextView
            android:layout_width="60dp"
            android:layout_height="14dp"
            android:background="@drawable/download_item_tag_play"
            android:focusable="true"
            android:paddingLeft="10dp"
            android:id="@+id/playinloadingBg"
            android:textColor="#0697df"
            android:visibility="invisible"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@+id/posterImg"
            android:layout_marginRight="20dp"
            />
       <TextView
       android:layout_width="55dp"
       android:layout_height="14dp"
       android:text="边下边播"
       android:textSize="10sp"
           android:visibility="invisible"
       android:focusable="true"
       android:paddingLeft="10dp"

       android:id="@+id/playinloading"
       android:textColor="#0697df"
       android:layout_alignParentBottom="true"
       android:layout_marginBottom="10dp"
       android:layout_toLeftOf="@+id/posterImg"
       android:layout_marginRight="20dp"
       />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/click_icon"
            android:src="@drawable/publish_video_icon"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@+id/posterImg"
            android:layout_marginRight="10dp"
            />
   </RelativeLayout>
</android.support.v7.widget.CardView>